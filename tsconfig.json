{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": false,
    "baseUrl": "./src",
    "paths": {
      "~src/*": ["./*"],
      "~modules/*": ["./modules/*"],
      "~common/*": ["./common/*"],
      "~constants": ["./common/constants.ts"]
    },
    "incremental": true
  }
}